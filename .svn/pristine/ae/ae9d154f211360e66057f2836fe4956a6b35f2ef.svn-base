@media all and (max-width: 1024px) {

	.container-main {
	
		#content-side-panel-1{
		top: 48px;
		&.absolute{
			margin-top: 48px;
		}
	}

	
		#content-main {
			margin-right: 0;
			margin-left: @width-side-panel-3-px + (@wrapper-page-padding-px);
		}
	}
	
	.betslipToggle {
		display:block;
	}
}
@media all and (max-width: 648px) {

	
	.container-main {
	
		#content-main {
			margin-left: 0;
		}	
		#content-side-panel-1{
			display:none;

		}
		
		#content-side-panel {
			clear:both;
			margin-top: 0px;
			.opacity-70();
			width: 0px;
			height: auto;
			position: absolute;
			z-index:20;
			opacity:0;
			filter: alpha(opacity=00); /* For IE8 and earlier */
			
			> div {
				width:200px;
			}
			
			&.show {
				width: 175px;
				opacity: 1;
				filter: alpha(opacity=100); /* For IE8 and earlier */

			}
		}
		
		
	}
	
	.menuToggle {
		display:block;
	}
	
}
