@import  "../components/variables";
@import  "../components/mixins";

.quickpick{

	header{
		
		padding: 12px 10px;
		font-weight: bold;
		position: relative;

		h3{
			font-size: 16px;
		}

		.secondary{
			position: absolute;
			right: 2px;
			font-size: 0.8em;
			bottom: 10px;
		}
	}
	
	> ul{
		> li{
			background: @grey10;

			header{
				padding: 12px 10px 14px 10px;
				h3{
					color: @color-highlight;
					font-weight: bold;
					padding-bottom: 6px;
				}
				p{
					font-size: 12px;
					font-weight: normal;
					color: @grey2;
				}
			}

			ul{
				width: 100%;
				background: @white;
				.clearfix();

				li{
					display: block;
					width: 65px;
					float: left;
					text-align: center;
					border: 1px solid @grey11;
					border-width: 0 1px 1px 0;
					padding: 12px 0;
					font-weight: 500;
				}
			}
		}
	}
}